<% if @success %>
    $('.offer-box-<%= @offer.id %>').find('.undo-deny').removeClass('hidden');
    $('.offer-box-<%= @offer.id  %>').find('.deny').addClass('hidden');
    $('.offer-box-<%= @offer.id  %>').find('.btn-accept').addClass('hidden');

    setTimeout(function() { $('.offer-box-<%= @offer.id %>').find('.undo-deny').addClass('hidden'); }, 10000);
<% else %>
    unsuccessfulOfferOperationNotice(<%= @offer_id %>, <%= @message %>);
<% end %>