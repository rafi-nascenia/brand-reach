<%- headers = ['Campaign Name','Date Billed', 'Transaction ID', 'Amount Received(INR)', 'Payment Status'] -%>
<%= CSV.generate_line headers %>
<% @brand_payments.each do |payment| %>
    <%= CSV.generate_line([payment.campaign.name, payment.billed_date.present? ? payment.billed_date.strftime('%B %d, %Y') : 'NA', sprintf('BP%05d', payment.id), payment.amount_billed, payment.status]).html_safe %>
<% end %>