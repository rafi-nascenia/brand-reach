<% errors = [] unless defined? errors %>
<% content_for :head do %>
    <%= stylesheet_link_tag 'profile.css', media: 'all' %>
<% end %>

<% title 'Select Social Media Accounts' %>

<div class="brands-profile-page-wrapper">

  <p class="alert alert-danger">
    Please select at least one social account before continuing to use the site
  </p>
  <% if errors.present? %>
      <% errors.each do |error| %>
          <p class="alert alert-danger">
            <%= error %>
          </p>
      <% end %>
  <% end %>

  <button type="button" class="btn btn-account button-border-yellow js-add-account" href="javascript:">ADD PAGES</button>

  <%= render 'shared/add_account_modal', remote: false %>

  <script>

    $(window).load(function() {
      $('.js-add-account').click();
    });

    $(document).ready(function () {
        var seconds = 2;
        $(document).on("click", ".js-add-account", function () {
            var btn = $(this);
            btn.prop('disabled', true);
            setTimeout(function () {
                btn.prop('disabled', false);
            }, seconds * 1000);
        });
    });

  </script>

</div>
