<script type="text/x-handlebars" id="add-facebook-account-template">
    <div class="modal fade" id="AddFacebookAccount" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <a href="#"><%= image_tag('logo_white.png', :class => 'img-responsive login-modal-logo', :alt => 'logo') %></a>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
          <div class="modal-body">
            <div class="add-another-account">Add another account</div>

            <div class="account-content">
                <form method="POST" action="<%= update_accounts_profile_index_path %>">
                    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                    <input type="hidden" name="access_token"/>
                    {{#each accounts}}
                        <div class="media js-clickable">
                          <div class="media-left media-middle">
                            <img class="media-object" src="{{picture.data.url}}">
                          </div>
                          <div class="media-body media-middle">
                            <h4 class="media-heading">{{name}}</h4>
                          </div>
                          <div class="media-right media-middle">
                            <input type="checkbox" name="accounts[]" value="{{id}}" {{#if selected}}checked{{/if}}>
                          </div>
                        </div>
                    {{/each}}

                    <br/>

                    <input class="btn btn-primary" type="submit" value="CONNECT"/>
                </form>
            </div>

            <div class='help-note'>
                    <P>Note:</p>
                    <p>Only the pages that meet out eligibility guidelines are displayed here.</p>
                    <p>You can view our eligibility guidelines <a href='/helps/index'>here</a>.</p>
                </div>

          </div>
        </div>
      </div>
    </div>
</script>
