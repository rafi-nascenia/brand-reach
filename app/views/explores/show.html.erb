<%= stylesheet_link_tag 'brands-explore.css', media: 'all' %>

<% title 'Brand Explore' %>

<div class="brands-explore-content-wrapper">
  <div class="brands-explore-advance-search">
    <form action="<%= explores_path %>" role="form" class="vertical" method="get">
      <div class="row">
        <div class="pull-left explore-adv-search">
          <p>ADVANCED SEARCH</p>
        </div>
        <div class="pull-left">
          <a href="javascript:;" class="btn-reset">Reset</a>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="row">
            <div class="col-md-12">
              <label for="category"> Category </label>
              <%= select_tag :category, options_for_select(Category.all.order(:name).pluck(:name)), {id: 'explore-category', prompt: 'Select a Category', class: 'double-arrow-select-icon'} %>
            </div>

            <div class="col-md-12 social-media-select">
              <label for="social-media-platform"> Social Media Platform </label>
              <select name="social_media_platform" id="explore-social-media" class="double-arrow-select-icon">
                <option value="">Select a Social Media Platform</option>
                <option value="fb">Facebook</option>
              </select>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="row">
            <div class="col-md-12">
              <label for="influencer_price"> Price </label>
              <%= select_tag 'post_type',
                             options_for_select(post_type_drop_down),
                             class: 'double-arrow-select-icon'
              %>

                <div>
                  <%= select_tag 'price',
                                 options_for_select(price_drop_down),
                                 {id: 'explore-price', prompt: 'Choose a range', class: 'double-arrow-select-icon'} %>
                </div>
            </div>

            <div class="col-md-12">
              <label for="Followers"> Followers </label>
              <%= select_tag 'followers', options_for_select(followers_drop_down), {id: 'explore-followers', prompt: 'Choose a range', class: 'double-arrow-select-icon'} %>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="row">
            <div class="col-md-12">
              <label for="influencer_country"> Location </label>
              <%= country_select_tag :country, '', {:id => 'explore-country', prompt: 'Select Country'} %>
              <div id="explore-state">
                <select name="state" class="country-responsive-font double-arrow-select-icon">
                  <option value="">Select State</option>
                </select>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
  <!-- end of advance search option -->

  <hr/>
  <div id="search-result-container">
    <%= render 'explores/explores', {accounts: @accounts} %>
  </div>

  <div id="profile-modal"></div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var d = document.getElementById("country");
        d.className += "double-arrow-select-icon";
    });
</script>

