<% title 'Invitations' %>

<div class="admin-page-wrapper">
  <div class="">
    <a href="#invitation-modal" data-toggle='modal' class="btn btn-primary raleway-semibold">
      <span class="plus-sign"><i class="fa fa-plus"></i></span>
      New Invitation</a>
  </div>
  <br/>
  <h1 class="admin-header">Sent Invitations</h1>
  <table class="table table-responsive admin-table invitation-table">
    <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
    </tr>
    </thead>
    <tbody>
    <%= render partial: 'invitation', collection: @invitations %>
    </tbody>
  </table>
</div>

<%= render 'form' %>

