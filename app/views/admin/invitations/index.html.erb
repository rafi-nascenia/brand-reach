<% title 'Invitations' %>

<div class="admin-page-wrapper">
  <div class="">
    <a href="#invitation-modal" data-toggle='modal' class="btn btn-primary raleway-semibold">
      <span class="plus-sign"><i class="fa fa-plus"></i></span>
      New Invitation</a>
  </div>
  <br/>
  <h1 class="admin-header display-inline-block">Invitations</h1>

  <%= form_tag admin_invitations_path, :method => 'get', class: 'admin-search-form display-inline-block' do %>
        <%= text_field_tag :email, params[:email], placeholder: 'Filter by email' %>
        <%= submit_tag 'Search', :name => nil %>
  <% end %>

  <table class="table table-responsive admin-table invitation-table">
    <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Date</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <%= render partial: 'invitation', collection: @invitations %>
    </tbody>
  </table>
  <%= paginate @invitations %>
</div>

<%= render 'form' %>

