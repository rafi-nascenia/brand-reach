<% flash.each do |type, message| %>
    <div class="alert fade in">
      <% if message.kind_of?(Array)%>
            <% message.each do |message_text| %>
              <P class="<%= bootstrap_class_for(type) %>"><%= message_text %></P>
            <% end %>
      <% else %>
          <%= message %>
       <% end %>
    </div>
<% end %>