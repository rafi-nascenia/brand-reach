<tr id="user-<%= user.id %>">
  <td><%= user.first_name %></td>
  <td><%= user.last_name %></td>
  <td><%= user.email %></td>
  <td><%= user.phone %></td>
  <td><%= user.company_name %></td>
  <td><%= user.time %></td>
  <% if user.brand? && !user.waiting? %>
  <td>
    <a href="<%= reset_user_password_admin_admin_path(user) %>" data-remote="true" class="text-success user-password-change" data-id="<%= user.email %>">
    <h5>Reset Password</h5>
    </a>
  </td>
  <% end %>
  <td>
    <% if user.active? %>
        <a href="javascript:;" class="text-red  text-danger deactivate-user" data-id="<%= user.id %>">
          <h5>DEACTIVATE</h5>
        </a>
    <% else %>
        <a href="javascript:;" class="text-success activate-user" data-id="<%= user.id %>">
          <h5>ACTIVATE</h5>
        </a>
    <% end %>
  </td>
  <td>
    <%= link_to 'DELETE', delete_user_admin_admin_path(id: user.id), method: :delete, remote: true %>
  </td>
</tr>

<script>
  $('.user-password-change')
</script>