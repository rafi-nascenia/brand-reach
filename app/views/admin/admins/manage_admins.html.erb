<% title 'Manage admins' %>

<div class="admin-page-wrapper">
  <h1 class="">Manage admins</h1>
  <br/>
  <div class="alert-danger"></div>
  <br/>
  <div class="">
    <a href="#add-admin-modal" data-toggle='modal' class="btn btn-primary raleway-semibold">+ Add new admin</a>
  </div>
  <br/>
  <br/>

  <table class="table table-responsive admin-table table-admin">
    <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <% @admins.each do |admin| %>
        <%= render partial: 'admin', object: admin %>
    <% end %>
    </tbody>
  </table>
</div>

<%= render 'add_admin_modal' %>

<script>
  $(function(){
    $('.remove-admin').click(function(){
        if(confirm('Do you really want to delete?')){
            var adminId = $(this).data('id');
            $.ajax({
                type: 'delete',
                url: '/admins/' + adminId,
                dataType: "script",
                data: {
                    'authenticity_token': $('meta[name="csrf-token"]').attr('content')
                },
                success: function(data) {
                    console.log(data)
                }
            });
        }
    });
  });
</script>