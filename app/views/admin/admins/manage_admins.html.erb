<% title 'Manage admins' %>

<div class="admin-page-wrapper">
  <div class="">
    <a href="#add-admin-modal" data-toggle='modal' class="btn btn-primary raleway-semibold"><span class="plus-sign"><i class="fa fa-plus"></i></span> Add Admin</a>
  </div>
  <div class="alert-danger"></div>
  <br/>
  <div>
    <h1 class="admin-header display-inline-block">Manage admins</h1>
    <%= form_tag manage_admins_admin_admins_path, :method => 'get', class: 'admin-search-form display-inline-block' do %>
        <p>
          <%= text_field_tag :email, params[:email], placeholder: 'Filter by email' %>
          <%= submit_tag 'Search', :name => nil %>
        </p>
    <% end %>
  </div>

  <table class="table table-responsive admin-table table-admin">
    <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <% @admins.each do |admin| %>
        <%= render partial: 'admin', object: admin %>
    <% end %>
    </tbody>
  </table>
  <%= paginate @admins %>
</div>

<%= render 'add_admin_modal' %>

